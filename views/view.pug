extends layout

block content
  h1= title
  p Welcome to #{title}
  //- p#hoge #{episodes[currentNumber]}
  p#hogehoge #{episodes[firstEpisodeNumber]}
  div#result

  button#nextButton
  button#prevButton

  script(type='text/javascript').
   $(function(){
      $('html').keyup(function(e) {
        if(e.keyCode === 39){
        $.ajax({
          url:'./view',
          type:'POST',
          data: {'goNext': true},
        })
        .done( (data) => {
          $('#hogehoge').html(data);
        });
        } else {
          return;
        }
      });

      $('html').keyup(function(e) {
        if(e.keyCode === 37){
        $.ajax({
          url:'./view',
          type:'POST',
          data: {'goBack': true},
        })
        .done( (data) => {
          $('#hogehoge').html(data);
        });
        } else {
          return;
        }
      });

      $('html').keyup(function(e) {
        if(e.keyCode === 13){
        $.ajax({
          url:'./view',
          type:'POST',
          data: {'backToTop': true},
        })
        .done( (data) => {
          $('#hogehoge').html(data);
        });
        } else {
          return;
        }
      });
      });
